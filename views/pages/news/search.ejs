<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>News</title>
  <script src="https://kit.fontawesome.com/94c005aa00.js" crossorigin="anonymous"></script>
  <link rel="shortcut icon" href="/assets/images/favicon.ico" />
  <link rel="stylesheet" href="/styles/reset.css">
  <link rel="stylesheet" href="/styles/base.css">
  <link rel="stylesheet" href="/styles/layout.css">
  <link rel="stylesheet" href="/styles/modules.css">
  <link rel="stylesheet" href="/styles/modules/generalSearches.css">
  <link rel="stylesheet" href="/styles/modules/news.css">

</head>
<body>
  <%- include("../../layout/header.ejs", {'index' : false}) %>

  <div>
    <section id="center">
        <p>Here's The News!</p>
        <form action="/news/show" method="POST">
          <fieldset>
            <legend>Pick the category you'd like to see</legend>
            <div>
              <div>
                <input type="radio" name="searchType" value="arts">
              </div>
              <label for="arts">Arts</label>
              <div>
                <input type="radio" name="searchType" value="automobiles">
              </div>
              <label for="automobiles">Automobiles</label>
              <div>
                <input type="radio" name="searchType" value="business">
              </div>
              <label for="business">Business</label>
              <div>
                <input type="radio" name="searchType" value="health">
              </div>
              <label for="health">Health</label>
              <div>
                <input type="radio" name="searchType" value="movies">
              </div>
              <label for="movies">Movies</label>
              <div>
                <input type="radio" name="searchType" value="politics">
              </div>
              <label for="politics">Politics</label>
              <div>
                <input type="radio" name="searchType" value="science">
              </div>
              <label for="science">Science</label>
              <div>
                <input type="radio" name="searchType" value="sports">
              </div>
              <label for="sports">Sports</label>
              <div>
                <input type="radio" name="searchType" value="technology">
              </div>
              <label for="technology">Technology</label>
              <div>
                <input type="radio" name="searchType" value="us">
              </div>
              <label for="us">US</label>
              <div>
                <input type="radio" name="searchType" value="world">
              </div>
              <label for="world">World</label>
              <input type="submit" value="See News" class="newsSubmit">
            </div>
          </fieldset>
        </form>
      <ul>
          <p class="topHeadlines">Top Headlines</p>
        <% news.forEach(val => { %>
            <li>
              <h2><%= val.title %></h2>
              <br>
              <h2><%= val.byline %></h2>
              <br>
              <p><%= val.abstract %></p>
              <br>
              <a href="<%= val.url %>">See Full Articale</a>
            </li>
        <% }) %>
      </ul>
    </section>
  </div>
  <script src="/app.js"></script>
  <script src="/news.js"></script>
  <script src="/theme.js"></script>
</body>

</html> 