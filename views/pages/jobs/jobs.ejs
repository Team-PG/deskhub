<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>DeskHub</title>
  <script src="https://kit.fontawesome.com/94c005aa00.js" crossorigin="anonymous"></script>
  <link rel="shortcut icon" href="/assets/images/favicon.ico" />
  <link rel="stylesheet" href="/styles/reset.css">
  <link rel="stylesheet" href="/styles/base.css">
  <link rel="stylesheet" href="/styles/layout.css">
  <link rel="stylesheet" href="/styles/modules.css">
  <link rel="stylesheet" href="/styles/modules/jobs.css">
  <link rel="stylesheet" href="/styles/modules/generalSearches.css">


</head>
<body>
  <%- include("../../layout/header.ejs", {'index' : false}) %>
  <div id='wrapper'>
    <div id='center' class="center">
      <form action="/jobs/search" method="POST">
        <h2>Search By:</h2>
        <label>Language
          <input type="text" name="searchLang" placeholder="I.e. Python">
        </label>
        <label>Location
          <input type="text" name="searchLoc" placeholder="I.e. Seattle, WA">
        </label>
        <input type="submit">
      </form>
      <ul>
        <% jobArr.forEach((job, i) => { %>
          <li>
            <h1>Company: <%= job.company %></h1>
            <h2>Job Title: <%= job.title %></h2>
            <p>Location : <%= job.location %></p>
            <p>Job Type: <%= job.type %></p>
            <a href="<%= job.url %>">View Posting</a>
            <button id="viewJobDesc<%=i%>">View Full Description</button>
            <p class="jobDescription" id="jobDesc<%=i%>"><%= job.description %></p>
            <p>Posted on: <%= job.createdOn %></p>
          </li>
        <% }) %>
        <% if (!jobArr.length) { %>
          <h1>We can't find any developer jobs in your area, try searching other areas above!</h1>
        <% } %>
      </ul>
    </div>
  </div>
  <script src="/app.js"></script>
  <script src="/jobs.js"></script>
  <script src="/theme.js"></script>
</body>
</html>