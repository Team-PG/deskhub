<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>DeskHub</title>
  <script src="https://kit.fontawesome.com/94c005aa00.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="/styles/reset.css">
  <link rel="stylesheet" href="/styles/base.css">
  <link rel="stylesheet" href="/styles/layout.css">
  <link rel="stylesheet" href="/styles/modules.css">
  <link rel="stylesheet" href="/styles/modules/jobs.css">

</head>
<body>
  <%- include("../layout/header.ejs") %>

  <div id='wrapper'>
    <div id='center' class="center">
      <ul>
        <% weather.forEach(day => { %>
          <li>
            <h2>Date : <%= day.time %></h2>
            <p>Forecast : <%= day.forecast %></p>
            <% if (day.forecast.includes('clouds')) { %>
              <i class="fas fa-cloud fa-2x"></i>
            <% } else if (day.forecast.includes('rain')) { %>
              <i class="fas fa-cloud-rain fa-2x"></i>
            <% }else { %>
              <i class="fas fa-sun fa-2x"></i>
            <% } %>
            <p>Average Temp: <%= day.avg %> &deg;F<br>High: <%= day.high %> &deg;F<br>Low: <%= day.low %> &deg;F</p>
            <p>Sunrise at: <%= day.sunrise %><br>Sunset at: <%= day.sunset %></p>
          </li>
        <% }) %>
  
      </ul>
    </div>
  </div>
  <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
  <script src="/weather.js"></script>
</body>
</html>