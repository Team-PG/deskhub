<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>DeskHub</title>
  <script src="https://kit.fontawesome.com/94c005aa00.js" crossorigin="anonymous"></script>
  <link rel="shortcut icon" href="/assets/images/favicon.ico" />
  <link rel="stylesheet" href="/styles/reset.css">
  <link rel="stylesheet" href="/styles/base.css">
  <link rel="stylesheet" href="/styles/layout.css">
  <link rel="stylesheet" href="/styles/modules.css">

</head>
<body>
  <%- include("../layout/header.ejs", {'index' : true}) %>

   
    <div class='center'>
      <section>
        <form action="/accountUpdate?_overrideMethod=PUT" method="POST" id="updateForm">
          <h2>Update your information</h2>
          <input type="text" name="updateUsername" placeholder="New Username">
          <input type="text" name="updatePassword" placeholder="New Password">
          <button>Submit Changes</button>
        </form>

        <form action="/">
          <button id="logout">Log Out</button>
        </form>

        <form action="/accountDelete?_overrideMethod=DELETE" method="POST" id="updateForm">
          <button>Delete Account</button>
        </form>

      </section>
    </div>
  

  <script src="/app.js"></script>
  <script src="/theme.js"></script>

</body>
</html>