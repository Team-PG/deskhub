<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>DeskHub</title>
  <%- include("../layout/linksPartial.ejs") %>

</head>
<body>
  <nav>
    <h1>DeskHub</h1>
  </nav>
  <div id='wrapper'>
    <div class="center">
      <form action="/user" method="POST" id="signInForm"> 
        <h1>Welcome to DeskHub</h1>
        <h2>Are you new here?</h2>
        <label for="returningUser">
          <input type="radio" id="returningUser" name="userType" value="returningUser">
          Sign In
        </label>
        <input type="text" class="returningUserText" name="returningName" placeholder="Username" id="returningName">
        <input type="password" class="returningUserText" name="returningPass" placeholder="Password">

        <label for="newUser">
          <input type="radio" id="newUser" name="userType" value="newUser">
          Create An Account
        </label> 
        <input type="text" class="newUserText" name="newName" placeholder="Choose a Username" id="newName">
        <input type="password" class="newUserText" name="newPass" placeholder="Choose a Password">
        <input type="text" class="newUserText" name="location" id = "newLoc" placeholder="Current location (City, state)">


        <input type="submit">
      </form>
  
    </div>
  </div>
  <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
  <script src="/app.js"></script>
  <script src="/login.js"></script>
  <script src="/theme.js"></script>

</body>
</html>